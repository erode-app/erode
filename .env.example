# AI provider: "gemini" (default) or "anthropic"
AI_PROVIDER=gemini

# API keys (required for the selected provider)
GEMINI_API_KEY=
ANTHROPIC_API_KEY=

# GitHub / GitLab tokens
GITHUB_TOKEN=
# GITLAB_TOKEN=
# GITLAB_BASE_URL=https://gitlab.com

# Model overrides â€” FAST for extraction stages (1, 2), ADVANCED for analysis stages (3, 4)
# GEMINI_FAST_MODEL=gemini-2.5-flash        # Default
# GEMINI_ADVANCED_MODEL=gemini-2.5-flash     # Default (free-tier safe). Paid users: gemini-2.5-pro
# ANTHROPIC_FAST_MODEL=claude-haiku-4-5-20251001
# ANTHROPIC_ADVANCED_MODEL=claude-sonnet-4-5-20250929

# Architecture model format
# MODEL_FORMAT=likec4

# Constraints
# MAX_FILES_PER_DIFF=50
# MAX_LINES_PER_DIFF=5000
# MAX_CONTEXT_CHARS=10000

# Timeouts (ms)
# GEMINI_TIMEOUT=60000
# ANTHROPIC_TIMEOUT=60000
# GITHUB_TIMEOUT=30000

# Debug
# DEBUG_MODE=true
# VERBOSE=true
